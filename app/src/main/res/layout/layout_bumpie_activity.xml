<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/top_navigation_layout"
        android:background="@color/lightcyan"
        android:visibility="visible"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:id="@+id/navigation_btn_layout"
            android:orientation="horizontal"

            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/backbutton1"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="#00ffffff"
                android:contentDescription="welcome"
                android:scaleType="fitCenter"
                android:src="@drawable/navbackbutton" />

            <TextView
                android:id="@+id/titlenavi"
                android:layout_width="328dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingTop="15dp"
                android:text="Bumpie"
                android:textAlignment="center"
                android:textColor="@color/WhiteColor"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/shareView"
                android:visibility="gone"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="#00ffffff"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:padding="10dp"

                android:src="@drawable/sharing_trans" />


        </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:visibility="visible"
        android:id="@+id/linearv"
        android:layout_height="65dp">

        <LinearLayout
            android:id="@+id/imageProcess"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#008080		"
            android:orientation="horizontal">

            <ImageView
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:src="@drawable/camera" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Take a bumpie"
                android:textColor="#FFFFFF"
                android:textSize="16sp"

                android:textStyle="bold" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="5dp"
            android:background="#FFFFFF"
            android:layout_height="match_parent">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/videoProcess"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#008080		"
            android:orientation="horizontal">

            <ImageView
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:src="@drawable/video_camera" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Create a Slideshow"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/warning_view"
        android:visibility="visible"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" >

        <TextView
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:text="No images to show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/bumpie_list"
        android:visibility="gone"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <ImageView
        android:id="@+id/full_screen_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/videorender"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />


</LinearLayout>
