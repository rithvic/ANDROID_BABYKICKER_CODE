<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/lighgrey"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/top_navigation_layout"
        android:background="@color/lightcyan"
        android:visibility="visible"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:id="@+id/navigation_btn_layout"
            android:orientation="horizontal"

            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/backbutton1"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="#00ffffff"
                android:contentDescription="welcome"
                android:scaleType="fitCenter"
                android:src="@drawable/navbackbutton" />

            <TextView
                android:id="@+id/titlenavi"
                android:layout_width="328dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingTop="15dp"
                android:text="Top Baby Names"
                android:textAlignment="center"
                android:textColor="@color/WhiteColor"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/shareView"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="#00ffffff"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:padding="10dp"

                />


        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="BOY NAMES"
            android:textColor="@color/cyan"
            android:textSize="18sp"
            android:textStyle="bold" />
        <ListView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/listboys"
            android:textAlignment="center"

            android:layout_height="wrap_content"/>


    </LinearLayout>



    <LinearLayout
        android:layout_margin="@dimen/activity_horizontal_margin"

        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="GIRL NAMES"
            android:textColor="@color/cyan"
            android:textSize="18sp"
            android:textStyle="bold" />
        <ListView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/listwomen"
            android:textAlignment="center"

            android:layout_height="wrap_content"/>


    </LinearLayout>

    </LinearLayout>

</LinearLayout>
